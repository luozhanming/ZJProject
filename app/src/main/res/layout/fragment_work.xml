<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/titlebar_size"
            android:orientation="vertical">

            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/work_banner"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="11"
                        android:layout_gravity="center"
                        android:id="@+id/tv_backlog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:textColor="#564b4b"
                        android:text="待办"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="11"
                        android:layout_gravity="center"
                        android:id="@+id/tv_readLater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:textColor="#564b4b"
                        android:text="待阅"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:text="11"
                        android:layout_gravity="center"
                        android:id="@+id/tv_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:textColor="#564b4b"
                        android:text="已办"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:text="11"
                        android:layout_gravity="center"
                        android:id="@+id/tv_haveRead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:textColor="#564b4b"
                        android:text="已阅"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLine"/>

            <TextView
                android:background="@color/white"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:textSize="@dimen/textSize14"
                android:text="常用功能"
                android:layout_height="@dimen/titlebar_size" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#545454"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_functions"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>



        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_size"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="湛江市统一门户"
            android:textColor="@color/white"
            android:textSize="@dimen/titletext_size" />

        <ImageView
            android:src="@mipmap/ic_search"
            android:id="@+id/iv_search"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp" />
    </FrameLayout>
</FrameLayout>